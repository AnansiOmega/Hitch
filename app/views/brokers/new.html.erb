<div class="logo">
    <%= link_to image_tag("/assets/logo.png"), home_path %><br>
  </div>
    

<h1> Broker Signup </h1>


<% if  flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %><br>
<% end %>
<% end %>

<%= form_for @broker do |f| %>
<p><%= f.label :name %></p>
<%= f.text_field :name %>

<p><%= f.label :email %></p>
<%= f.text_field :email %>

<p><%= f.label :password %></p>
<%= f.password_field :password %><br><br>

<%= f.submit value: "SIGNUP" %>

<% end %>