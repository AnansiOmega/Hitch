<h1> Please specify What this delivery consists of </h1>

<%= form_for @delivery do |f| %>

<%= f.hidden_field :broker_id, :value => session[:broker_id] %>

<%= f.label :supplier %>
<%= f.collection_select :supplier_id, Supplier.all, :id, :company %>

<%= f.label :receiver %>
<%= f.collection_select :receiver_id, Receiver.all, :id, :company %>

<%= f.label :driver %>
<%= f.collection_select :driver_id, Driver.all, :id, :name %>

<%= f.label :height %>
<%= f.text_field :height %>

<%= f.label :weight %>
<%= f.text_field :weight %>

<%= f.label :hazardous %>
<%= f.check_box :hazardous %>

<%= f.label :scheduled_pickup %>
<%= f.datetime_select :scheduled_pickup %>

<%= f.hidden_field :status, :value => "Awaiting Pickup" %>

<%= f.label :description %>
<%= f.text_area :description, value: "Please Specify the number of pallets, and the product" %>


<%= f.submit %>
<% end %>